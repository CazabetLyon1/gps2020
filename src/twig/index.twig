{% extends './block/layout.twig' %}

{% block page %}
<leaflet-map></leaflet-map>
<notification-module></notification-module>
<div id="map_tools">
  <button type="button" id="help" name="help"></button>
  <input type="radio" id="move_map" name="tools" checked>
  <label class="tool" for="move_map"><span class="tooltip">Déplacer</span></label>
  <input type="radio" id="add" name="tools">
  <label class="tool" for="add"><span class="tooltip">Ajouter</span></label>
  <input type="radio" id="delete" name="tools">
  <label class="tool" for="delete"><span class="tooltip">Supprimer</span></label>
  <input type="radio" id="move" name="tools">
  <label class="tool" for="move"><span class="tooltip">Déplacer</span></label>
  <input type="radio" id="lasso" name="tools">
  <label class="tool" for="lasso"><span class="tooltip">Lasso</span></label>
  <input type="radio" id="wand" name="tools">
  <label class="tool" for="wand"><span class="tooltip">Correcteur</span></label>
</div>
<div id="top-left">
  <img src="/img/map.png" alt="Logo Lifprojet">
  <span>L<span>ifprojet</span></span>
</div>
<div id="coordinates">
  <button type="button" name="undo" id="undo" disabled></button>
  <!--<button type="button" name="zoomin" id="zoomin"></button>-->
  <!--<span id="lat"></span><span id="lng"></span>-->
  <button type="button" name="localization" id="localization"></button>
  <!--<button type="button" name="compass" id="compass"></button>-->
  <!--<button type="button" name="zoomout" id="zoomout"></button>-->
  <button type="button" name="redo" id="redo" disabled></button>
</div>
<!--<div id="buttonss">
  <button type="button" name="import" id="import"></button>
  <button type="button" name="export" id="export"></button>
</div>-->
<div id="bottom-left">
  <input type="checkbox" name="hide_details" id="hide_details" checked>
  <label for="hide_details"></label>
  <div>
    <apex-chart></apex-chart>
  </div>
  <div>
    <button id="lat" type="button" name="lat" value="">45.6643...</button>
    <button id="lng" type="button" name="lng" value="">4.84656...</button>
  </div>
  <div>
    <div>
      <span id="points">0</span>
      <span>Points</span>
    </div>
    <div>
      <span id="length">0</span>
      <span>km</span>
    </div>
  </div>
  <div>
    <div>
      <span id="max">-</span>
      <span>Max</span>
    </div>
    <div>
      <span id="min">-</span>
      <span>Min</span>
    </div>
    <div>
      <span id="moy">-</span>
      <span>Moy</span>
    </div>
  </div>
  <div>
    <button type="button" name="import" id="import">Importer</button>
    <button type="button" name="export" id="export">Exporter</button>
  </div>
</div>
<div id="bottom-right">
  <button type="button" name="zoomout" id="zoomout"></button>
  <input type="range" name="zoom" id="zoom" class="level-0" min="0" max="18" step="1" value="0">
  <button type="button" name="zoomin" id="zoomin"></button>
</div>
<import-module></import-module>
<export-module></export-module>
<div id="help_container">
  <div id="help-flex">
    <div id="text-content">
      <input type="radio" id="help_move_map" name="help" checked>
      <label for="help_move_map">
        <span>Se déplacer</span>
        <span>Cet outil permet de se déplacer sur la carte.</span>
      </label>
      <input type="radio" id="help_add" name="help">
      <label for="help_add">
        <span>Ajout d'un point</span>
        <span>Cet outil permet d'ajouter un point à votre itinéraire GPS. Il est possible de cliquer sur le tracé pour ajouter votre point entre deux autres.</span>
      </label>
      <input type="radio" id="help_delete" name="help">
      <label for="help_delete">
        <span>Suppression d'un point</span>
        <span>Cet outil permet de supprimer un point de votre itinéraire GPS.</span>
      </label>
      <input type="radio" id="help_move" name="help">
      <label for="help_move">
        <span>Déplacement d'un point</span>
        <span>Cet outil permet de déplacer un point déjà présent sur votre itinéraire GPS. Il est possible de fusionner deux points consécutifs.</span>
      </label>
      <input type="radio" id="help_lasso" name="help">
      <label for="help_lasso">
        <span>Lasso</span>
        <span>Cet outil permet de réduire localement le nombre de points de votre itinéraire GPS.</span>
      </label>
      <input type="radio" id="help_wand" name="help">
      <label for="help_wand">
        <span>Correcteur</span>
        <span>Cet outil permet de réduire globalement le nombre de points de votre itinéraire GPS.</span>
      </label>
    </div>
    <div id="gif-content">
      <img id="gif" src="/img/move_map.gif" alt="">
    </div>
  </div>
</div>
{% endblock %}
